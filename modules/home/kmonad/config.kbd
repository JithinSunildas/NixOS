;; ~/.config/kmonad/config.kbd

(defsrc
  caps
  ;; Define all other keys from your keyboard layout here
  ;; You must list all keys, but for this example, we focus on caps
)

(defalias
  ;; Define the Tap/Hold alias: Caps Lock acts as ESC on tap, CTRL on hold
  clc (tap-hold 200 esc lctl)
)

(deflayer main
  @clc
  ;; Map all other keys 1:1 using the placeholder
  ;; For example, if you defined 'a', you put 'a' here
  ...
)
